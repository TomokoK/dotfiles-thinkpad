#!/bin/bash

bspc desktop -r LVDS1 &

bspc monitor -r LVDS1 &

bspc desktop -f VGA1 &

bspc monitor -f VGA1 &

bspc config remove_disabled_monitors true &

bspc config remove_unplugged_monitors true &

bspc monitor VGA1 -d 1 2 3 4 5 6

xrandr --output LVDS1 --off --output VGA1 --mode 1920x1080 &

exec /home/asuka/.config/lemonbar/bar_config_vga
