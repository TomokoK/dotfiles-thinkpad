## BORDERS

# Hide bloat
window.handle.width: 0
border.width: 0

# Set border width
window.client.padding.width: 0

# Set border color
window.*.client.color: #000000


## TITLE

# Add some padding
padding.width: 18
padding.height: 9

# Set title colors
window.*.title.bg: Solid Flat
window.*.*.bg: Parentrelative
window.*.title.bg.color: #1C1D20
window.*.label.text.color: #000000

# Set buttons color
window.*.button.*.image.color: #DDCCBB


## MENU

# Set menu colors
menu.*.bg: Solid Flat
menu.*.bg.color: #151515
menu.*.text.color: #DDCCBB

# Add some padding
menu.border.width: 20
menu.border.color: #151515

# Add some submenu padding
menu.overlap.x: -10
menu.overlap.y: 0

# Add padding between items
menu.separator.padding.height: 1
menu.separator.color: #151515
