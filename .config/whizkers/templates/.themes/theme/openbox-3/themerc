## BORDERS

# Hide bloat
window.handle.width: 0
border.width: 0

# Set border width
window.client.padding.width: 0

# Set border color
window.*.client.color: "#000000"


## TITLE

# Add some padding
padding.width: 18
padding.height: 9

# Set title colors
window.*.title.bg: Solid Flat
window.*.*.bg: Parentrelative
window.*.title.bg.color: {{ title_bg }}
window.*.label.text.color: "#000000"

# Set buttons color
window.*.button.*.image.color: {{ title_btn_clr }}


## MENU

# Set menu colors
menu.*.bg: Solid Flat
menu.*.bg.color: {{ menu_bg }}
menu.*.text.color: {{ menu_txt_clr }}

# Add some padding
menu.border.width: 20
menu.border.color: {{ menu_bg }}

# Add some submenu padding
menu.overlap.x: -30
menu.overlap.y: 0

# Add padding between items
menu.separator.padding.height: 3
menu.separator.color: {{ menu_bg }}
